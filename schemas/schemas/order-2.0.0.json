{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "http://schema-repository:8080/schemas/order/2.0.0",
  "version": "2.0.0",
  "title": "Order",
  "description": "An order placed by a user (v2)",
  "type": "object",
  "properties": {
    "orderId": { "type": "integer" },
    "userId": { "type": "integer" },
    "productIds": { "type": "array", "items": { "type": "integer" } },
    "total": { "type": "number" },
    "status": { "type": "string", "enum": ["pending", "shipped", "delivered", "cancelled"] }
  },
  "required": ["orderId", "userId", "productIds", "total"]
}

